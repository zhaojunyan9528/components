@import '../../css/weui.wxss';
.sbFlex{
	display: flex;
	align-items: center;
	justify-content: space-between;
}
view {
   box-sizing: border-box;
}
.card_box{
	padding: 20rpx 30rpx;
	background: #fff;
	align-items: flex-start;
	font-size: 32rpx;
	border-bottom: 2rpx #f0f0f0 solid;
}
.card_box_r{
	width: 100%;
	height: 100%;
	display: flex;
	justify-content: space-between;
	flex-direction: column;
	position: relative;
	min-height:150rpx;
}

.card_box_r_t{
	max-width: 350rpx;
	line-height: 35rpx;
	font-size: 32rpx;
	color:#333;
}
.card_box_r_m{
	margin: 10rpx 0rpx;
	font-size: .75em;
	min-height: 100rpx;
	color: #999;
}
.card_box_r_b{
	width: 100%;
	font-size: .75em;
	color: #999;
	line-height: 35rpx;
	align-items: flex-end;
}
.card_box_r_t_r{
	position: absolute;
	right: 0rpx;
	top: 0rpx;
	text-align: right;
	line-height: 26rpx;
	font-size: 24rpx;
	align-items: flex-end;
}
.line1{
	line-height: 24rpx
}
.line2{
	line-height: 36rpx
}
.card_box_l{
	width: 255rpx;
	height: 160rpx;
	min-width: 255rpx;
	margin-right: 10rpx;
}
.card_box_r_b_r{
	color: #e80012;
}
.card_box_r_t_r_icon{
	width: 30rpx;
	height: 30rpx;
	min-width: 30rpx;
	margin-right: 10rpx;
}