@import "../../css/weui.wxss";
view{
	box-sizing: content-box;
}
.icon-pq-sousuo:before { content: "\e6ff"; }
.iList_box{
	width: 100vw;
	position: absolute;
	z-index: 8;
}
.iList_in_title{
	display: flex;
	align-items: center;
	padding:0rpx 30rpx;
	font-weight: 600;
	height: 45px;
}
.iList_in_con{
	padding:0rpx 30rpx;
	background: #fff;
	border-bottom: 1px #f5f5f5 solid;
	display: flex;
	align-items: center;
	height: 45px;
}
.iList_fiexd{
	position: fixed;
	right: 0rpx;
	top: 50%;
	transform: translateY(-50%);
	text-align: right;
	z-index: 10;
}
.iList_fiexd_in{
	height: 25px;
	padding: 0rpx 30rpx;
	text-align: center;
}
.searchBox{
	height: 7.5vh;
	z-index: 99;
}
.searchBox_in{
	position: relative;
	z-index: 99;
	margin-top: 0rpx;
	max-height: 45vh;
	background: #f5f5f5;
}
.fiexd_icon{
	
}
.fiexd_icon_in,.fiexd_icon::before{
	content:' ';
	padding: 40rpx 30rpx;
	position: fixed;
	background: #000;
	z-index: 100;
	min-width: 120rpx;
	min-height: 80rpx;
	top: 50%;
	left: 50%;
	transform: translate(-50%,-50%);
	border-radius: 40rpx;
	animation: opacityHide .5s ease-in forwards;
}
.fiexd_icon_in{
	opacity: 1;
	color: #fff;
	z-index: 200;
	font-weight: 600;
	background: transparent;
	display: flex;
	align-items: center;
	justify-content: center;
	font-size: 40rpx;
	animation: opacityFont .8s ease-in forwards;
}
@keyframes opacityHide {
    0% { opacity: .5;display: block;}
  100% { opacity: 0;display: none;}
}
@keyframes opacityFont {
    0% { opacity: 1;}
  100% { opacity: 0;display: none;}
}